<% if current_user.gone?(course) %>
  <%= form_tag(gone_path(course.id), method: :delete) do %>
    <%= hidden_field_tag :course_id, course.id %>
    <%= hidden_field_tag :type, 'Gone' %>
    <%= submit_tag 'Ungone', class: 'btn btn-success' %>
  <% end %>
<% else %>
  <%= form_tag(gones_path) do %>
    <%= hidden_field_tag :course_code, course.code %>
    <%= hidden_field_tag :type, 'Gone' %>
    <%= submit_tag 'Gone', class: 'btn btn-primary' %>
  <% end %>
<% end %>